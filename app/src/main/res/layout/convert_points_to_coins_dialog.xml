<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Enter the number of coins :"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:id="@+id/textViewInChooseWeaponDialog"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_below="@id/textViewInChooseWeaponDialog"
        android:id="@+id/numOfCoinsInChooseWeaponDialog"
        android:inputType="numberDecimal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addCoinsInChooseWeaponDialog"
        android:layout_below="@id/numOfCoinsInChooseWeaponDialog"
        android:layout_alignEnd="@id/numOfCoinsInChooseWeaponDialog"
        android:text="ADD"
        android:textAllCaps="false"/>
</RelativeLayout>