<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cont_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ambush.continueRegisterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:id="@+id/contRegLayout"
        app:layout_constraintLeft_toLeftOf="@+id/activity_cont_register"
        app:layout_constraintTop_toTopOf="@+id/activity_cont_register"
        app:layout_constraintRight_toRightOf="@+id/activity_cont_register"
        app:layout_constraintBottom_toBottomOf="@+id/activity_cont_register">
        <ImageView
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:background="@drawable/pic"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/RegisterImage"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:text="Ambush Victory Insult : "
            app:layout_constraintTop_toBottomOf="@+id/RegisterImage"
            app:layout_constraintLeft_toLeftOf="@+id/RegisterImage"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/textView"
            android:layout_below="@+id/RegisterImage"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:id="@+id/victory_insult"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="@+id/textView"
            />

        <TextView
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/victory_insult"
            app:layout_constraintLeft_toLeftOf="@+id/victory_insult"
            android:text="Ambush Escape Insult :"
            android:layout_below="@+id/victory_insult"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:ems="10"
            app:layout_constraintLeft_toLeftOf="@id/textView3"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/victory_insult"
            android:layout_marginTop="14dp"
            android:id="@+id/editText"
            android:layout_alignEnd="@+id/victory_insult" />

        <TextView
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true"
            app:layout_constraintLeft_toLeftOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:text="Ambush Counter Attack Victory Insult :"
            android:layout_marginTop="12dp"
            android:id="@+id/textView4" />

        <EditText
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:inputType="textPersonName"
            android:background="#FFFFFF"
            app:layout_constraintLeft_toLeftOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:ems="10"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/editText"
            android:layout_marginTop="11dp"
            android:id="@+id/editText4"
            android:layout_alignEnd="@+id/editText" />

        <Button
            android:text="Complete"
            android:textAllCaps="false"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintRight_toRightOf="@+id/editText4"
            app:layout_constraintTop_toBottomOf="@+id/editText4"
            android:id="@+id/button2"
            android:layout_below="@+id/editText4"
            android:layout_alignEnd="@+id/editText4"
            android:layout_marginTop="13dp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
