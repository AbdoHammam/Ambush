<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weapons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ambush.weaponsActivity">
    <GridLayout
        app:layout_constraintRight_toRightOf="@+id/activity_weapons"
        app:layout_constraintLeft_toLeftOf="@+id/activity_weapons"
        app:layout_constraintTop_toTopOf="@+id/activity_weapons"
        app:layout_constraintBottom_toBottomOf="@+id/activity_weapons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A0A2A"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <ImageButton
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:id="@+id/hand"
            android:background="@mipmap/hand_weapon"
            app:layout_constraintLeft_toLeftOf="@+id/activity_weapons"
            app:layout_constraintTop_toTopOf="@+id/activity_weapons" />
        <ImageButton
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:id="@+id/knife"
            android:background="@mipmap/knife"
            app:layout_constraintLeft_toRightOf="@+id/hand"
            app:layout_constraintTop_toTopOf="@+id/activity_weapons"
            />
        <ImageButton
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:id="@+id/pistol"
            android:background="@mipmap/pistol0"
            android:layout_row="1"
            android:layout_column="0"
            app:layout_constraintLeft_toLeftOf="@+id/activity_weapons"
            app:layout_constraintTop_toBottomOf="@+id/hand" />
        <ImageButton
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:id="@+id/ak47"
            android:background="@mipmap/ak47"
            app:layout_constraintLeft_toRightOf="@+id/pistol"
            app:layout_constraintTop_toBottomOf="@+id/knife" />
        <ImageButton
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:id="@+id/sniper"
            android:background="@mipmap/sniper"
            android:layout_row="2"
            android:layout_column="0"
            app:layout_constraintLeft_toLeftOf="@+id/activity_weapons"
            app:layout_constraintTop_toBottomOf="@+id/pistol"/>
        <ImageButton
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:id="@+id/grenade"
            android:background="@mipmap/grenade"
            app:layout_constraintLeft_toRightOf="@+id/sniper"
            app:layout_constraintTop_toBottomOf="@+id/ak47"/>

    </GridLayout>


</android.support.constraint.ConstraintLayout>
