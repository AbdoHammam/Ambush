<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ambush.registerActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/RelativeL"
    app:layout_constraintLeft_toLeftOf="@+id/activity_register"
    app:layout_constraintTop_toTopOf="@+id/activity_register"
    app:layout_constraintRight_toRightOf="@+id/activity_register"
    app:layout_constraintBottom_toBottomOf="@+id/activity_register">

    <ImageView
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:background="@drawable/pic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/RegisterImage"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Continue"
        android:textSize="15sp"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="382dp"
        android:id="@+id/button"
        android:textColor="#FFFFFF"
        android:background="#0A0A2A"
        android:layout_below="@+id/confirmPasswordEditText"
        android:layout_alignEnd="@+id/confirmPasswordEditText"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:id="@+id/nameEditText"
        app:layout_constraintLeft_toRightOf="@+id/nameTextView"
        app:layout_constraintTop_toBottomOf="@+id/RegisterImage"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/RegisterImage"
        android:layout_alignEnd="@+id/RegisterImage"
        android:layout_marginEnd="25dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:ems="10"
        android:id="@+id/passwordEditText"
        tools:layout_editor_absoluteX="112dp"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/nameEditText"
        android:layout_alignStart="@+id/nameEditText" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:ems="10"
        android:id="@+id/confirmPasswordEditText"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText"
        app:layout_constraintLeft_toRightOf="@+id/confirmPasswordTextView"
        android:layout_alignTop="@+id/confirmPasswordTextView"
        android:layout_alignStart="@+id/passwordEditText" />

    <TextView
        android:layout_height="30dp"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="Username : "
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:id="@+id/nameTextView"

        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/RegisterImage"
        android:layout_alignTop="@+id/nameEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="Password : "
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:id="@+id/passwordTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"
        app:layout_constraintRight_toLeftOf="@+id/passwordEditText"
        android:layout_alignTop="@+id/passwordEditText"
        android:layout_alignStart="@+id/nameTextView" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="Confirm Password : "
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:id="@+id/confirmPasswordTextView"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextView"
        android:layout_marginTop="17dp"
        app:layout_constraintRight_toLeftOf="@+id/passwordEditText"
        android:layout_below="@+id/passwordTextView"
        android:layout_alignStart="@+id/passwordTextView" />
</RelativeLayout>
</android.support.constraint.ConstraintLayout>
