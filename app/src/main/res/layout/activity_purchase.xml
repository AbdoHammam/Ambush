<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_purchase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ambush.purchaseWeaponActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:id="@+id/weaponImage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:layout_below="@+id/weaponImage"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:textAlignment="viewStart"
                android:textSize="28sp"
                android:textColor="#000000"
                android:id="@+id/weaponName"
                android:text="Name : "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#000000"
                android:textAlignment="viewStart"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/weaponName"
                android:text="Accuracy : "
                android:id="@+id/weaponAccuracy"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:textAlignment="viewStart"
                android:textSize="28sp"
                android:textColor="#000000"
                android:id="@+id/weaponDamage"
                android:text="Damage : "
                android:layout_below="@+id/weaponAccuracy"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#000000"
                android:textAlignment="viewStart"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:id="@+id/weaponRange"
                android:text="Range : "
                android:layout_below="@+id/weaponDamage"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:textSize="28sp"
                android:textColor="#000000"
                android:id="@+id/weaponPrice"
                android:text ="Price : "
                android:layout_below="@+id/weaponRange"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:textSize="28sp"
                android:id="@+id/weaponLose"
                android:text="Lose After Death : "
                android:layout_below="@+id/weaponPrice"/>

        </LinearLayout>

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayout"
            android:textColor="#B40404"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:text="Coins : "
            android:textSize="28sp"
            android:id="@+id/currentCoins" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/currentCoins"
            android:textColor="#B40404"
            android:text="Points :"
            android:layout_marginStart="40dp"
            android:textSize="28sp"/>

        <Button
            android:text="Purchase"
            android:textAllCaps="false"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="35dp"
            android:id="@+id/purchase"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
